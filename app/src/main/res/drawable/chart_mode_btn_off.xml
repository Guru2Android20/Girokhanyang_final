            <item
                android:top="-2dp"
                android:right="-4dp"
                android:left="-4dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00FFFFFF" />
                    <stroke
                        android:width="2dp"
                        android:color="#F4F4F4" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
